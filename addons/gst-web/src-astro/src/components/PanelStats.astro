<style>
  .panel-stats {
    max-height: 35%;
    @apply w-full min-h-64 flex flex-col border-2 border-selkies-fill-lighter rounded-lg p-1
           shadow-sm shadow-selkies-fill-darker;
    hr {
      @apply mx-auto w-11/12 border-0 pt-0.5 bg-selkies-fill-lighter my-1;
    }
  }

  .panel-stats-scroller {
    @apply flex flex-col overflow-y-auto rounded-lg;
  }

  .panel-substats {
    @apply flex flex-col bg-selkies-fill-lighter p-2 my-1 rounded-md text-selkies-text text-sm gap-1;
  }
</style>
